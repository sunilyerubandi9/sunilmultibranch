pipeline {
	agent any
	tools {
		maven "Maven"
	}
	stages {
		stage('build') {
			steps {
				echo 'build main'
				snDevOpsStep()
				sleep 5
			}
		}
		stage('test') {
			steps {
				echo 'test main'
				snDevOpsStep()
				sleep 5
			}
		}
		
		stage('Upload-JFrog-${branch}') {
            		steps {
                		echo 'Upload-JFrog-${branch}'
           		}

			post {
				always {
				   script {
					     def server = Artifactory.server 'JFROG1'
					     def uploadSpec = """{
						"files": [{
						   "pattern": "/tmp/jfrog_saif.jar",
						   "target": "sunijfrogmultibranch-libs-snapshot-local/${branch}/${BUILD_NUMBER}/"
						}]
					     }"""

					     def buildInfo = server.upload(uploadSpec)
					     server.publishBuildInfo buildInfo
					  }
				    }
			      }

                }
	
		stage('Deploy for development') {
			when {
				branch 'development'
			}
			steps {
				echo 'dev branch deployment...'
				snDevOpsStep()
		//		snDevOpsArtifact artifactsPayload: '{"artifacts":[{"name": "sa-web.jar", "version": "1.38", "repositoryName": "sunilmultibranch"}, {"name": "sa-db.jar", "version": "1.38", "repositoryName": "sunilmultibranch"}], "branchName": ${branch}}'
				sleep 5
			}
		}
		stage('Deploy for production') {
			when {
				branch 'prod'
			}
			steps {
				echo 'prod branch deployment...'
				snDevOpsStep()
				sleep 5
			}
		}
	}
}
